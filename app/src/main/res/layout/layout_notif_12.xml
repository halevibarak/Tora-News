<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layoutDirection="ltr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/stop_v"
            style="Custom Notification Title"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="top"
            android:src="@drawable/stop_g" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_v"
                style="style/TextAppearance.Compat.Notification.Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center|right"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingRight="2dp"
                android:ellipsize="end" />


        </LinearLayout>
        <ImageView
            android:id="@+id/play_prev"
            style="Custom Notification Title"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="1dp"
            android:gravity="center"
            android:src="@drawable/a_prev"
            app:tint="@color/accent_blue"
            android:text="play" />

       <ImageView
            android:id="@+id/play_v"
            style="Custom Notification Title"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="1dp"
            android:gravity="center"
            android:src="@drawable/a_play"
           app:tint="@color/accent_blue"
            android:text="play" />


        <ImageView
            android:id="@+id/play_n"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="1dp"
            android:gravity="center"
            android:src="@drawable/a_next"
            app:tint="@color/accent_blue" />






    </LinearLayout>



</LinearLayout>